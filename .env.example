# Telegram bot
BOT_TOKEN=
BOT_USERNAME=your_bot_username

# Database
DATABASE_URL=postgresql+asyncpg://shopbot:shopbot@localhost:5432/shopbot

# YooKassa
YK_SHOP_ID=
YK_SECRET_KEY=
YK_RETURN_URL=http://localhost:8000/thanks
# Опционально: Basic Auth для защиты webhook (настраивается в личном кабинете YooKassa)
# Оставьте пустым, если не используете авторизацию webhook
YK_WEBHOOK_USER=
YK_WEBHOOK_PASSWORD=
# Опционально: Дополнительные доверенные IP-адреса для webhook (через запятую)
# Используется если webhook приходит через прокси или локальный хост
# Пример: TRUSTED_WEBHOOK_IPS=192.168.1.100,10.0.0.50
TRUSTED_WEBHOOK_IPS=

# Server
SERVER_IP=127.0.0.1
# Важно: для продакшн используйте реальный домен с HTTPS
# Пример: https://shop.example.com
BASE_URL=http://localhost:8000
PORT=8000

# Admin defaults
ADMIN_USERNAME=
ADMIN_PASSWORD=
ADMIN_CHAT_ID=
ADMIN_TG_USERNAME=
SHOW_CONTACT_BUTTON=true
CONTACT_ADMIN=@admin  # Username администратора для кнопки "Связаться" и уведомлений о доставке
SHOW_DONATE_BUTTON=true

# Shopping settings
ENABLE_DIRECT_PURCHASE=true  # Разрешить прямую покупку из карточки товара (кнопка "Купить сейчас")

# Email fallback
EMAIL_DOMAIN=tg.local

# Uploads
UPLOAD_DIR=uploads

# Webhook
WEBHOOK_URL=
WEBHOOK_SECRET=

# Donate
DONATE_AMOUNTS=100,200,500
